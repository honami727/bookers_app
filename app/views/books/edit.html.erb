  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>

  
  <div class="field">
    <label for="book_title">Title</label>
    <input class="book_title" type="text" value="<%= @book.title %>" name="book[title]" id="book_title">
  </div>
  
  <div class="field">
    <label for="book_body">Body</label>
    <textarea class="book_body" name="book[body]" id="book_body"><%= @book.body %></textarea>
  </div>
  
  <div class="actions">
    <input type="submit" name="commit" value="Update Book" data-disable-with="Update Book">
  </div>
  
  
  <%= link_to "Show", book_path(@book.id), class:"show_path" %>
  |
<%= link_to "Back", books_path, class:"back" %>


<% end %>

</body>